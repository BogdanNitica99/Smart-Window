{
    "device-name": "Window App",
    "device-type": "Window",
    "buffers-count": 2,
    "input-buffers":{
        "1":{
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XPOST 'http://127.0.0.1:8080/'",
            "buffer-tokens":[
            {
                "name":"App actions",
                "description":"Parameters for opening/closing and turning off",
                "token-type":"string", 
                "byte-size":10, 
                "regex-rule": "[a-zA-Z]*", // Correct inputs will be: [open, close, turn off]
                "optional": false
            },
            {
                "name":"App objects",
                "description": "Parameters representing which part of the window are the actions applied to.",
                "token-type":"string",
                "byte-size":10,
                "regex-rule": "[a-zA-Z]*", // Correct inputs will be: [window, curtain, net, alarm]
                "optional": false
            },
            {
                "name":"App action parameter value",
                "description": "Parameter value for the setting chosen",
                "token-type":"string",
                "byte-size":10,
                "regex-rule": "[0-9]*", // Correct inputs will be: [1, 2...]
                "optional": false
            }
            ]
        },
        "2":{
            "token-delimitators": "",
            "protocol": "HTTP",
            "prefix": "curl -XGET 'http://127.0.0.1:8080/'",
            "buffer-tokens":[
            {
                "name":"App objects",
                "description": "Parameters representing which part of the window are the actions applied to.",
                "token-type":"string",
                "byte-size":10,
                "regex-rule": "[a-zA-Z]*", // Correct inputs will be: [window, curtain, net, alarm]
                "optional": false
            }
            ]
        }
    }
}